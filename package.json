{
  "name": "genai-telegram-lead-scanner",
  "private": true,
  "version": "1.0.0",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "vercel-build": "npm install && npm run build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-win": "npm run build && electron-builder --win",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-linux": "npm run build && electron-builder --linux",
    "build-with-deps": "powershell -ExecutionPolicy Bypass -File build-with-deps.ps1",
    "build-with-deps-bash": "bash build-with-deps.sh"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.0",
    "terser": "^5.44.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.genai.telegram-lead-scanner",
    "productName": "Telegram Lead Scanner",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "dist/**/*",
      "backend/**/*",
      "main.js",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/vite.svg",
      "sign": false
    },
    "mac": {
      "target": "dmg",
      "icon": "public/vite.svg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/vite.svg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
